<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}">
    <title>{% block title %}Summary{% endblock %}</title>
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <ul>
                <li>
                    <a href="#" id="menuToggle">Menu</a>
                    <ul class="dropdown" id="mobileDropdown">
                        <li><a href="{{ url_for('home') }}">Home</a></li>
                        <li><a href="{{ url_for('insight') }}">Insight</a></li>
                        <li><a href="{{ url_for('visual') }}">Visual</a></li>
                        <li><a href="{{ url_for('recommend') }}">Recommend</a></li>
                        <li><a href="{{ url_for('table') }}">Table</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
    <main>
        {% block content %}{% endblock %}
    </main>
    <footer class="footer">
        <div class="container">
            <a href="https://jaykrown.com/" target="_blank">jaykrown.com</a>
        </div>
    </footer>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const menuToggle = document.getElementById('menuToggle');
            const mobileDropdown = document.getElementById('mobileDropdown');
            
            menuToggle.addEventListener('click', function(e) {
                e.preventDefault();
                mobileDropdown.style.visibility = mobileDropdown.style.visibility === 'visible' ? 'hidden' : 'visible';
                mobileDropdown.style.opacity = mobileDropdown.style.opacity === '1' ? '0' : '1';
            });
        });
    </script>
</body>
</html>